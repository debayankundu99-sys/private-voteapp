pipeline{
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '15'))
        disableConcurrentBuilds()
        retry(3)
        timeout(time: 15, unit: 'MINUTES')
    }
    parameters {
         string(name: 'BRANCH', defaultValue: 'main', description: 'branch to build') 
         choice(name: 'ENV', choices: ['prod', 'dev', 'qa'], description: 'env to build') 
    }
    stages{
        stage("Docker login and push"){
            steps{
                sh "docker login -u debayan0904 -p Docker0904#"
                sh '''
                    cd vote
                    docker build -t debayan0904/vote:v${BUILD_NUMBER} .
                    '''
                sh "docker push debayan0904/vote:v${BUILD_NUMBER}"
            }
        }
        stage("deploy"){
            steps{
                sh "echo starting deployment"
            }
        }
    }
}
